<%- include ("partials/header")%>

<div class="col-12 col-md-6 card container text-left mt-5">
    <h2 class="mt-4 text-center">Edit: <%= blog.title%></h2>
    <form action="/blogs/<%=blog._id%>?_method=put" method="post"> 
        <div class="form-group">
          <label for="exampleFormControlInput1" >Title</label>
          <input type="text" name="blog[title]" class="form-control" id="exampleFormControlInput1" value="<%=blog.title%>">
        </div>
        <div class="form-group">
          <label for="exampleFormControlInput1">Image</label>
          <input type="text" name="blog[image]" class="form-control" id="exampleFormControlInput1" value="<%=blog.image%>">
        </div>
       
        <div class="form-group">
          <label for="exampleFormControlTextarea1">Post</label>
          <textarea class="form-control" name="blog[body]" id="exampleFormControlTextarea1" rows="3"  ><%=blog.body%></textarea>
        </div>
        <button type="submit" class="btn btn-primary">UPDATE BLOG</button>
      </form>

</div>

<%- include ("partials/footer")%>