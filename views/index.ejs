<%- include ("partials/header")%> 



<% blogs.forEach(function(blog){%>
    <div class="card col-6 justify-content-center">
        <h2>
            <%=blog.title%>
        </h2>
        <img src="<%=blog.image%>" alt="">
        <span><%=blog.created%></span>
        <p>
            <%=blog.body.substring(0, 100)%>
            ...
        </p>
        <a href="/blogs/<%= blog._id%>">Read More...</a>
    </div>   
    <%}) %>




