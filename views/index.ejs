<%- include ("partials/header")%> 



<% blogs.forEach(function(blog){%>
    <div class=" blogs col-6 align-items-center">
        <div class=" card-body">
            <h2>
                <%=blog.title%>
            </h2>
            <img src="<%=blog.image%>" alt="">
            <span><%=blog.created%></span>
            <p>
                <%=blog.body.substring(0, 100)%>
                ...
            </p>
            <a href="/blogs/<%= blog._id%>">Read More...</a>
        </div>   
     </div>
    <%}) %>




